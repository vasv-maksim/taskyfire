{
  "name": "taskyfire",
  "version": "1.0.0",
  "description": "Task and time manager",
  "main": "index.ts",
  "private": false,
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "server": "ts-node index.ts",
    "client": "npm start --prefix client",
    "lint": "eslint . --ext .ts",
    "lint-fix": "eslint . --ext .ts --fix"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vasv-maksim/taskyfire.git"
  },
  "author": "Vasev Maksim <vasv_maksim@rambler.ru>",
  "license": "MIT",
  "homepage": "https://github.com/vasv-maksim/taskyfire/blob/main/README.md",
  "dependencies": {
    "@ngrx/entity": "^12.4.0",
    "@types/zen-observable": "^0.8.3",
    "apollo-server-express": "^3.1.1",
    "express": "^4.17.1",
    "express-graphql": "^0.12.0",
    "graphql": "^15.5.1",
    "ts-node": "^10.1.0"
  },
  "devDependencies": {
    "@types/graphql": "^14.5.0",
    "@types/node": "^16.4.8",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "apollo": "^2.33.6",
    "concurrently": "^6.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^6.3.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-airbnb-typescript": "^8.0.2",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "nodemon": "^2.0.12",
    "typescript": "^4.3.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.*.(js|ts)": [
      "npm run lint-fix"
    ]
  }
}
